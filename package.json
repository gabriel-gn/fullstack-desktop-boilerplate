{
  "name": "boilerplate",
  "description": "boilerplate for angular + nest + electron",
  "main": "main.js",
  "version": "0.0.0",
  "author": "Gabriel Nogueira",
  "scripts": {
    "ng": "./node_modules/.bin/ng",
    "dev": "concurrently -p=\"{name}\" -n=\"Angular,NestJS\" -c=\"green,blue\" \"npm run start:app:dev\" \"npm run start:api:dev\"",
    "start:app:dev": "cd apps/app && ng serve -o",
    "start:app": "npm run build:app && http-server -p 8080 -c-1 dist/apps/app",
    "build:app": "cd apps/app && ng build",
    "watch:app": "cd apps/app && ng build --watch --configuration development",
    "test:app": "cd apps/app && ng test",
    "build:api": "cd apps/api && nest build",
    "start:api": "cd apps/api && nest start",
    "start:api:dev": "cd apps/api && nest start --watch",
    "start:api:debug": "cd apps/api && nest start --debug --watch",
    "start:api:prod": "npm run build:api && node dist/api/main",
    "test:api": "cd apps/api && jest",
    "test:api:watch": "cd apps/api && jest --watch",
    "test:api:cov": "cd apps/api && jest --coverage",
    "start:desktop": "npm run build:desktop && electron dist/apps/desktop/main.js",
    "build:desktop": "npm run build && tsc --project apps/desktop && cp package.json dist/apps/desktop/package.json && cp -R dist/apps/api dist/apps/desktop && cp -R dist/apps/app dist/apps/desktop",
    "start": "start:app",
    "prebuild": "rimraf dist",
    "build": "npm run build:app && npm run build:api",
    "test": "test:app",
    "prepack": "rimraf package",
    "pack": "npm run build:desktop && npx electron-packager dist/apps/desktop --out=package --icon=apps/desktop/assets/icon.png",
    "pack:mac": "npx electron-packager dist/apps/desktop --out=package --overwrite --platform=darwin --arch=x64 --icon=apps/desktop/assets/icon.icns --prune=true",
    "pack:win": "npx electron-packager dist/apps/desktop --out=package --overwrite --asar=true --platform=win32 --arch=ia32 --icon=apps/desktop/assets/icon.ico --prune=true --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Boilerplate App\"",
    "pack:linux": "npx electron-packager dist/apps/desktop --out=package --overwrite --asar=true --platform=linux --arch=x64 --icon=apps/desktop/assets/icon.png --prune=true"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.1.0",
    "@angular/common": "~13.1.0",
    "@angular/compiler": "~13.1.0",
    "@angular/core": "~13.1.0",
    "@angular/forms": "~13.1.0",
    "@angular/platform-browser": "~13.1.0",
    "@angular/platform-browser-dynamic": "~13.1.0",
    "@angular/router": "~13.1.0",
    "@nestjs/axios": "0.0.7",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.2.1",
    "@nrwl/nx": "^7.8.7",
    "concurrently": "^7.1.0",
    "electron": "^18.2.0",
    "nestjs-redoc": "^2.2.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^13.3.4",
    "@angular/cli": "~13.1.2",
    "@angular/compiler-cli": "~13.1.0",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jasmine": "~3.10.0",
    "@types/jest": "27.4.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "jasmine-core": "~3.10.0",
    "jest": "^27.2.5",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.5.2"
  },
  "build": {
    "build": {
      "productName": "Boilerplate",
      "artifactName": "boilerplate-${version}-${os}-${arch}.${ext}",
      "icon": "apps/desktop/assets/icon.icns",
      "appId": "com.test.boilerplate",
      "copyright": "Copyright Â© 2022 ${author}",
      "appImage": {
        "systemIntegration": "doNotAsk"
      },
      "files": [
        "dist/apps/**/*"
      ],
      "directories": {
        "buildResources": "public"
      },
      "pkg": {
        "license": "README.md",
        "isRelocatable": false
      }
    },
    "extraMetadata": {
      "main": "main.js"
    }
  }
}
